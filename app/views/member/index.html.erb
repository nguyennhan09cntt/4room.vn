<div class="portlet box grey-cascade">
  <div class="portlet-title">
    <div class="caption">
      <i class="fa fa-globe"></i><%= @members.total_entries %> dòng(s)
    </div>
  </div>
  <div class="portlet-body">
    <div class="table-toolbar">      
       

    </div>
    <table class="table table-striped table-bordered table-hover" id="table_module">
      <thead>
        <tr>
          <th>
            
          </th>
          <th>Avatar</th>
          <th width="350">
            Tên
          </th>
         
          
          <th>
            Ngày tạo
          </th>
          <th>
          </th>
        </tr>
      </thead>
      <tbody>
      	<%  @members.each_with_index do |member, index| %>
        <tr>
          <td><%= index+1 %></td>
          <td>
            <img class="thumb-info-image" src="https://graph.facebook.com/<%= member.facebook_id %>/picture?type=large" alt="" height="100">
          </td>
          <td><%= member.name %></td>
          
         
          <td><%= member.created_at.strftime("%d/%m/%Y %H:%M") %></td>
          <td>
             <a href="https://facebook.com/<%= member.facebook_id %>" class="btn btn-sm yellow btn-outline edit" target="_blank">Link</a>
          </td>
        </tr>
        <% end %>
      </tbody>
      <tfoot>
        <tr>
          <td colspan="99">
            <%= will_paginate @members %>
          </td>
        </tr>
      </tfoot>
    </table>
  </div>
</div>