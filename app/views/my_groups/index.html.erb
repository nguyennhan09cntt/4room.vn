<div class="page-bar">
  <ul class="page-breadcrumb">
    <li>
      <a href="/">Home</a>
      <i class="fa fa-circle"></i>
    </li>
    <li>
      <span>Module</span>
    </li>
  </ul>
</div>
<!-- BEGIN PAGE TITLE-->
<h1 class="page-title"> 
	Manage  
    <small>Module</small>
</h1>
<!-- END PAGE TITLE-->

<div class="portlet box grey-cascade">
  <div class="portlet-title">
    <div class="caption">
      <i class="fa fa-globe"></i><%= @site.total_entries %> dòng(s)
    </div>
  </div>
  <div class="portlet-body">
    <div class="table-toolbar">
      <div class="btn-group">
        <button id="btn_add_new" class="btn green">
          Thêm mới <i class="fa fa-plus"></i>
        </button>
      </div>
      <div class="pull-right">
        <form method="get" action="">
          <fieldset class="filter">
            <label>Hệ thống</label>
            <select name="c" id="c" class="input-inline form-control">
              <option value="0">++</option>
              <option value="1">CMS</option>
              <option value="2">Operation</option>
            </select>                                
            <input value="Tìm kiếm" class="btn blue" type="submit">
          </fieldset>
        </form>
      </div>
    </div>
    <table class="table table-striped table-bordered table-hover" id="table_module">
      <thead>
        <tr>
          <th>
            ID
          </th>
          <th>
            Tên 
          </th>          
           <th>
            Members
          </th>       
          <th>
            Ngày tạo
          </th>
        </tr>
      </thead>
      <tbody>
      	<%  @site.each do |c| %>
        <tr>
          <td><%= c.id %></td>
          <td><a href="<%= c.url %>"><%= c.name %></a></td>
           
          <td>          
            
          </td>    
          <td>            
            <%= c.created_at %>
          </td>
          <td>
             <a href="/<%= c.facebook_id %>/post">Manage Post</a>
          </td>
          
        </tr>
        <% end %>
      </tbody>
      <tfoot>
        <tr>
          <td colspan="99">
            <%= will_paginate @site %>
          </td>
        </tr>
      </tfoot>
    </table>
  </div>
</div>