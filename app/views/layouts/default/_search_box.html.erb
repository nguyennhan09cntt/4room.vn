
<div style="" class="margin-top-20">
    <div class="container">
        <div class="row">
            <div class="col-md-12 map-navigation-positioning">
                <div class="map-navigation-wrapper">
                    <div class="map-navigation">
                        <form role="search" method="GET" id="searchformTop" class="searchform" action="/tim-kiem">
                            <div class="search_field">
                                <div class="row">
                                    <div class="col-xs-3 padding5">
                                        <div class="form-group">
                                            <div class="form-group">
                                                <input type="text" class="form-control" id="search_keyword" name="keyword" value="<%= @filter[:keyword]%>" placeholder="Nhập thông tin cần tìm" autocomplete="off">                             
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-xs-3 padding5">
                                        <div class="form-group">
                                            <select name="category" id="search_category" class="form-control">
                                                <option value="">--Danh muc--</option>
                                                <option value="mua-ban" <%= @filter[:category] == 'mua-ban' ? 'selected="selected"' : ''%>>Mua ban</option>
                                                <option value="thue-cho-thue" <%= @filter[:category] == 'thue-cho-thue' ? 'selected="selected"' : ''%> >Thue va cho thue</option>
                                                <option value="viec-lam" <%= @filter[:category] == 'viec-lam' ? 'selected="selected"' : ''%> >Viec lam</option>
                                                <option value="chia-se" <%= @filter[:category] == 'chia-se' ? 'selected="selected"' : ''%> >Chia se</option>
                                                <option value="cong-nghe" <%= @filter[:category] == 'cong-nghe' ? 'selected="selected"' : ''%> >Cong nghe</option>
                                                <option value="khac"<%= @filter[:category] == 'khac' ? 'selected="selected"' : ''%> >Khac</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-xs-3 padding5">
                                        <div class="form-group">
                                            <select name="price_value" id="search_post_prices" class="form-control price">
                                                <option value="">--Chọn mức giá--</option>
                                                <option value="1" <%= @filter[:price_value] == '1' ? 'selected="selected"' : ''%>>&lt; 1.000.000</option>
                                                <option value="2" <%= @filter[:price_value] == '2' ? 'selected="selected"' : ''%>>1000.000 - 3.000.000</option>
                                                <option value="3" <%= @filter[:price_value] == '3' ? 'selected="selected"' : ''%>>3.000.000 - 5.000.000</option>
                                                <option value="4" <%= @filter[:price_value] == '4' ? 'selected="selected"' : ''%>>5.000.000 - 10.000.000</option>
                                                <option value="5" <%= @filter[:price_value] == '5' ? 'selected="selected"' : ''%>>&gt; 10.000.000</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-xs-3 padding5">                                        
                                        <div class="form-group  pull-right">
                                            <button type="submit" class="btn btn-default btn_search_box  red-haze">Tìm kiếm bai dang
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                    <!-- /.map-navigation -->
                </div>
                <!-- /.map-navigation-wrapper -->
            </div>
            <!-- /.col-sm-3 -->
        </div>
        <!-- /.row -->
    </div>
</div>