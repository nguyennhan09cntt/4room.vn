                            <div class="col-md-9">
                                <div class="row">
                                 <% unless item.nil? %>
                                    <% item.each do |subKey, subItem| %>
                                        <div class="col-md-4">
                                            <p><strong><%= subKey %></strong></p>

                                            <div class="checkbox-list">
                                                <% subItem.each do |privilege, privilege_data| %>

                                                    <label>
                                                        

                                                       <%= privilege %>
                                                    </label>


                                                <% end %>
                                            </div>
                                        </div>
                                    <% end %>
                                    <% end %>
                                </div>
                            </div>
                        </div>
                    <% end %>
                <% end %>

            </div>
        <% end %>
    </div>
</div>
