<div class="portlet box blue">
    <div class="portlet-title">
        <div class="caption">
            <i class="fa fa-gift"></i> Thong tin thanh vien </div>
        <div class="tools">

        </div>
    </div>
    <div class="portlet-body form">

        <%= form_for @user, :url =>{:action => "update", :id =>@user}, :html => {:class => 'form-horizontal'} do |f| %>
            <div class="form-body">
              <% if @user.errors.any? %>
              <div class="alert alert-danger display-hide" style="display: block;">
                  <button class="close" data-close="alert"></button>
                  <ul>
                   <% @user.errors.full_messages.each do |message| %>
                   <li><%= message %></li>
                  </ul>
                  <% end %>
              </div>
              <% end %>
                <div class="form-group">
                    <%= label_tag(:user_user_name, "User Name", class: "col-md-4 control-label") %>
                    <div class="col-md-8">
                      <div class="input-icon right">
                        <i class="fa fa-info-circle tooltips" data-original-title="User name" data-container="body"></i>
                        <%= f.text_field :user_name, placeholder: 'Username', class: "form-control form-control-solid placeholder-no-fix", autocomplete:"off", disabled:true %>
                       </div>
                    </div>
                </div>

                <div class="form-group">
                    <%= label_tag(:user_fullname, "Full Name", class: "col-md-4 control-label") %>
                    <div class="col-md-8">
                      <div class="input-icon right">
                        <i class="fa fa-info-circle tooltips" data-original-title="Full name" data-container="body"></i>
                        <%= text_field :user, :name, placeholder: 'Fullname', class: "form-control form-control-solid placeholder-no-fix", autocomplete:"off" %>
                       </div>
                    </div>
                </div>
                <div class="form-group">
                    <%= label_tag(:user_job, "Job title", class: "col-md-4 control-label") %>
                    <div class="col-md-8">
                      <div class="input-icon right">
                        <i class="fa fa-info-circle tooltips" data-original-title="Job title" data-container="body"></i>
                        <%= text_field :user, :job, placeholder: 'Job title', class: "form-control form-control-solid placeholder-no-fix", autocomplete:"off" %>
                       </div>
                    </div>
                </div>

                <div class="form-group">
                    <%= label_tag(:user_phone, "Mobile Number", class: "col-md-4 control-label") %>
                    <div class="col-md-8">
                      <div class="input-icon right">
                        <i class="fa fa-info-circle tooltips" data-original-title="Mobile Number" data-container="body"></i>
                        <%= text_field :user, :phone, placeholder: 'Mobile Number', class: "form-control form-control-solid placeholder-no-fix", autocomplete:"off" %>
                       </div>
                    </div>
                </div>

                <div class="form-group">
                    <%= label_tag(:user_birthday, "Birthday", class: "col-md-4 control-label") %>
                    <div class="col-md-8">
                      <div class="input-icon right">
                        <i class="fa fa-info-circle tooltips" data-original-title="Birthday" data-container="body"></i>
                         <%= f.text_field :birthday, class: "form-control form-control-solid placeholder-no-fix date-picker", autocomplete:"off", size: 6, 'data-date-format': 'yyyy-mm-dd' %>
                       </div>
                    </div>
                </div>

                <div class="form-group">
                    <%= label_tag(:resource_fk_user_module, "Nhóm quản trị:", class: "col-md-4 control-label") %>
                    <div class="col-md-4">
                      <div class="input-icon right">
                        <%= collection_select(:user, :fk_user_role, @role_data, :id, :name, {prompt: true, :selected => @user.fk_user_role}, {:class=> "form-control form-control-solid"}) %>
                       </div>
                    </div>
                </div>

                <div class="form-actions">
                 <div class="row">
                    <div class="col-md-offset-4 col-md-8">
                       <!--  <button type="button" class="btn default">Cancel</button> -->
                        <%= submit_tag("Submit", class: "btn green uppercase") %>
                    </div>
                  </div>
                </div>
            </div>
        <% end %>
    </div>
</div>

